<Page x:Class="GameAggregator.LibraryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameAggregator"
      xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LibraryPage">
    <Grid Background="{x:Null}">
        <TextBox Margin="0, 4, 0, 4" x:Name="tbxSearchGame" Text="" VerticalAlignment="Top"/>
        <ScrollViewer Margin="0, 24, 0, 0" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="spInstalledGames"/>
        </ScrollViewer>
    </Grid>
</Page>