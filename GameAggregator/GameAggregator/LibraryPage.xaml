<Page x:Class="GameAggregator.LibraryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameAggregator"
      xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LibraryPage">
    <Grid Background="{x:Null}">
        <TextBox x:Name="tbSearchString"  FontSize="14" Margin="4, 4, 120, 0" 
                 VerticalAlignment="Top" KeyDown="TbSearch_KeyDown"/>
        <Button x:Name="btnSearch" Content="Поиск" Margin="4, 4, 4, 4" FontSize="14" Width="100" 
                HorizontalAlignment="Right" VerticalAlignment="Top" Click="BtnSearch_Click"/>
        <ScrollViewer Margin="0, 32, 0, 0" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="spGames"/>
        </ScrollViewer>
    </Grid>
</Page>